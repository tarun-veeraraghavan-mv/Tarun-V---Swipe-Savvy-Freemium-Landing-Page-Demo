generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String   @unique
  password  String
  website   String?
  receiveSms Boolean @default(false)
  plan String @default("free")
  stripeCustomerId String?   @unique
  stripeSubId     String?    @unique
  trialEndsAt     DateTime?  // Stripe trial end timestamp
  upgradedAt      DateTime?  // When upgrade happened
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sentEmails SentEmail[]
  payments        Payments[]
}

model SentEmail {
  id        Int      @id @default(autoincrement())
  to        String
  subject   String
  text      String
  status    String
  sentAt    DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Payments {
  id            Int       @id @default(autoincrement())
  user          User      @relation(fields: [userId], references: [id])
  userId        Int
  sessionId     String    @unique // cs_...
  subscriptionId String?  // sub_...
  customerId    String?   // cus_...
  amount        Int       // in cents (Stripe format)
  currency      String
  status        String    // e.g. "paid", "unpaid", "trialing"
  trialEndsAt   DateTime?
  createdAt     DateTime  @default(now())
}